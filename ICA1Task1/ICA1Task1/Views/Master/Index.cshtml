@model IEnumerable<CFEDModel.BusinessUnit>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
       <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
       <td>
            @Html.ActionLink("View Staff within this Business Unit", "Details", new { id=item.businessUnitId })
        </td>
    </tr>
}

</table>
